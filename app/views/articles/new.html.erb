<div class="container">

	<h1>Make new Article</h1>

	<div class="articles">
		<%= form_for(@article) do |f| %>
		  <ul>
		  <% @article.errors.full_messages.each do |error| %>
		    <li><%= error %></li>
		  <% end %>
		  </ul>
		  <p>
		    <%= f.label :title %><br />
		    <%= f.text_field :title %>
		  </p>
		  <p>
		    <%= f.label :body %><br />
		    <%= f.text_area :body %>
		  </p>
		  <p>
		    <%= f.submit %>
		  </p>
		<% end %>

		
		<%= link_to "All Articles", articles_path, class: 'allArticle' %>
	</div>
</div>